# i3 config file (v4)
#
# Please see https://i3wm.org/docs/userguide.html for a complete reference!

set $mod Mod4
set $alt Mod1

set_from_resource $black color7 #0a0b0d
set_from_resource $white color0 #ffffff
set_from_resource $red color1 #cc0000
set_from_resource $lightblue color3 #9fe736
set_from_resource $blue color4 #2bb9b8
set_from_resource $darkblue color5 #398f8f

for_window [class=".*"] border pixel 2
for_window [class=".*"] title_format " <b>%class</b> "

focus_follows_mouse no
hide_edge_borders smart

# colour of border, background, text, indicator, and child_border
client.focused                  $white $white $red $red $black
client.focused_inactive 	      $white $white $black $white $white
client.unfocused                $white $white $black $white $white
client.urgent                   $red $white $red $red $red
client.placeholder              $white $black $white
client.background               $red

# Font for window titles. Will also be used by the bar unless a different font
# is used in the bar {} block below.
font pango: IBM 3270 12

# Use Mouse+$mod to drag floating windows to their wanted position
floating_modifier $mod

exec --no-startup-id compton -b

# start a terminal
bindsym $alt+Return exec urxvt

# kill focused window
bindsym $mod+Shift+q kill

bindsym $mod+d exec rofi -show run -config ${HOME}/.config/rofi/run_config
#bindsym $mod+d exec --no-startup-id i3-dmenu-desktop

bindsym $alt+f exec spacefm
bindsym $alt+c exec chromium --incognito
bindsym $alt+b exec firefox --private-window
bindsym Print exec scrot -q 100 "$HOME/Pictures/%Y_%m_%d_%H_%M_%S_screenshot_$wx$h.jpeg"

# change focus
bindsym $mod+h focus left
bindsym $mod+j focus down
bindsym $mod+k focus up
bindsym $mod+l focus right

# move focused window
bindsym $mod+Shift+h move left
bindsym $mod+Shift+j move down
bindsym $mod+Shift+k move up
bindsym $mod+Shift+l move right

bindsym XF86AudioRaiseVolume exec amixer -c 0 sset Master 2dB+ && pkill -RTMIN+10 i3blocks
bindsym XF86AudioLowerVolume exec amixer -c 0 sset Master 2dB- && pkill -RTMIN+10 i3blocks
bindsym XF86AudioMute exec amixer sset Master toggle && pkill -RTMIN+10 i3blocks

bindsym --release Caps_Lock exec pkill -SIGRTMIN+11 i3blocks
bindsym --release Num_Lock exec pkill -SIGRTMIN+11 i3blocks

mode "Orientation"
{
	# split in horizontal orientation
 	bindsym h split h

	# split in vertical orientation
 	bindsym v split v

 	bindsym Return mode "default"
 	bindsym Escape mode "default"
}

bindsym $mod+o mode "Orientation"

# enter fullscreen mode for the focused container
bindsym $mod+f fullscreen toggle

# change container layout (stacked, tabbed, toggle split)
bindsym $mod+s layout stacking
bindsym $mod+w layout tabbed
bindsym $mod+e layout toggle split

# toggle tiling / floating
bindsym $mod+Shift+space floating toggle

# change focus between tiling / floating windows
bindsym $mod+space focus mode_toggle

# focus the parent container
bindsym $mod+a focus parent

# lock
#bindsym $alt+l exec --no-startup-id $HOME/i3lock-fancy/lock

# Define names for default workspaces for which we configure key bindings later on.
# We use variables to avoid repeating the names in multiple places.
set $ws1 "1"
set $ws2 "2"
set $ws3 "3"
set $ws4 "4"
set $ws5 "5"
set $ws6 "6"
set $ws7 "7"
set $ws8 "8"
set $ws9 "9"
set $ws10 "10"

# switch to workspace
bindsym $mod+1 workspace $ws1
bindsym $mod+2 workspace $ws2
bindsym $mod+3 workspace $ws3
bindsym $mod+4 workspace $ws4
bindsym $mod+5 workspace $ws5
bindsym $mod+6 workspace $ws6
bindsym $mod+7 workspace $ws7
bindsym $mod+8 workspace $ws8
bindsym $mod+9 workspace $ws9
bindsym $mod+0 workspace $ws10

# move focused container to workspace
bindsym $mod+Shift+1 move container to workspace $ws1
bindsym $mod+Shift+2 move container to workspace $ws2
bindsym $mod+Shift+3 move container to workspace $ws3
bindsym $mod+Shift+4 move container to workspace $ws4
bindsym $mod+Shift+5 move container to workspace $ws5
bindsym $mod+Shift+6 move container to workspace $ws6
bindsym $mod+Shift+7 move container to workspace $ws7
bindsym $mod+Shift+8 move container to workspace $ws8
bindsym $mod+Shift+9 move container to workspace $ws9
bindsym $mod+Shift+0 move container to workspace $ws10

# reload the configuration file
bindsym $mod+Shift+c reload
# restart i3 inplace (preserves your layout/session, can be used to upgrade i3)
bindsym $mod+Shift+r restart
# exit i3 (logs you out of your X session)
bindsym $mod+Shift+e exec "i3-nagbar -f IBM 3270 -t error -m 'Exit?' -b 'Yes' 'i3-msg exit'"
bindsym $mod+Shift+s exec systemctl hibernate
bindsym $mod+Shift+p exec systemctl poweroff

# resize window (you can also use the mouse for that)
mode "Resize" {
        bindsym h resize shrink width 10 px or 10 ppt
        bindsym j resize grow height 10 px or 10 ppt
        bindsym k resize shrink height 10 px or 10 ppt
        bindsym l resize grow width 10 px or 10 ppt

        bindsym Return mode "default"
        bindsym Escape mode "default"
}

bindsym $mod+r mode "Resize"

bindsym $mod+i bar mode toggle bar-1; bar mode toggle bar-2

bar {
  id bar-1

  mode dock
  hidden_state hide
  modifier none

	tray_padding 0
  font pango: IBM 3270 bold 12
	separator_symbol "|"

	colors {
		background $white
		statusline $black
		separator $red

		focused_workspace $white $white $red
		active_workspace $white $white $darkblue
		inactive_workspace $white $white $black
		urgent_workspace $red $white $red
		
	}
	status_command i3blocks -c ${HOME}/.config/i3blocks/config
}

